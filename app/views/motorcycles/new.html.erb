<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="center-form">

        <h2>New Motorcycle</h2>

        <%= simple_form_for @motorcycle do |f| %>


          <%= f.input :model %>
          <%= f.select :manufacturer, collection: Motorcycle::MANUFACTURERS %>
          <%= f.select :style, collection: Motorcycle::STYLES %>
          <%= f.input :production_year %>
          <%= f.input :engine_size %>
          <%= f.input :engine_type %>
          <%= f.input :horsepower %>
          <%= f.input :license_plate %>
          <%= f.input :description %>
          <%= f.input :pickup_address %>
          <%= f.input :city %>
          <%= f.input :zip_code %>
          <%= f.input :autonomy_km %>
          <%= f.input :price_per_day %>

          <div class="form-actions text-center">
            <%= f.button :submit, 'List your motorcycle!', class: "btn btn-primary btn-lg" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
